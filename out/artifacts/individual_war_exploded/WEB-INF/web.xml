<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
   
  <servlet>
      <servlet-name>redirection</servlet-name>
      <servlet-class>Redirect</servlet-class>
   </servlet>    
  <servlet-mapping>
    <servlet-name>redirection</servlet-name>
    <url-pattern>/redirect</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>LogInForm</servlet-name>
      <servlet-class>LogIn</servlet-class>
   </servlet>    
  <servlet-mapping>
    <servlet-name>LogInForm</servlet-name>
    <url-pattern>/logInForm</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>RegistrationForm</servlet-name>
      <servlet-class>Registration</servlet-class>
   </servlet>    
  <servlet-mapping>
    <servlet-name>RegistrationForm</servlet-name>
    <url-pattern>/registrationForm</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>validateRegisterFields</servlet-name>
      <servlet-class>ValidateRegisterFields</servlet-class>
   </servlet>    
  <servlet-mapping>
    <servlet-name>validateRegisterFields</servlet-name>
    <url-pattern>/validateRegisterFields</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>validateRegisterAvailability</servlet-name>
      <servlet-class>ValidateRegisterAvailability</servlet-class>
   </servlet>    
  <servlet-mapping>
    <servlet-name>validateRegisterAvailability</servlet-name>
    <url-pattern>/validateRegisterAvailability</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>validateLogInFields</servlet-name>
      <servlet-class>ValidateLogInFields</servlet-class>
   </servlet>    
  <servlet-mapping>
    <servlet-name>validateLogInFields</servlet-name>
    <url-pattern>/validateLogInFields</url-pattern>
  </servlet-mapping>

